/** Game loop controller */

class Game {

   field int score;
   field Player player;

   constructor Game new() {
      let score = 0;
      let player = Player.new();

      return this;
   }

   method void run() {
      while (true) {
         do player.drawSelf();
         do Sys.wait(100);
      }
      // Never happens
      return;
   }

   
}


