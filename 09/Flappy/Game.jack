/** Game loop controller */

class Game {

   field int score;
   field Player player;

   constructor Game new() {
      let score = 0;
      let player = Player.new();

      return this;
   }

   method void run() {
      var int key;
      while (true) {
         let key = Keyboard.keyPressed();
         do player.drawSelf(key);
         do Sys.wait(50);
      }
      // Never happens
      return;
   }

   
}


